<UserControl x:Class="BlackJack.BustedUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BlackJack"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    <Border Background="Green" Padding="15">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="100" />
            </Grid.RowDefinitions>
            <TextBlock Text="You Went Bust" FontFamily="Trebuchet MS" FontSize="100" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="0" />
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Button x:Name="PlayAgain" Click="PlayAgain_Click" Content="Play Again" FontFamily="Trebuchet MS" FontSize="48" Margin="10" Grid.Column="0" />
                <Button x:Name="Exit" Click="Exit_Click" Content="Exit" FontFamily="Trebuchet MS" FontSize="48" Margin="10" Grid.Column="1" />
            </Grid>
        </Grid>
    </Border>
</UserControl>
