<UserControl x:Class="BlackJack.EndGameButtons"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BlackJack"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="770">
    <Border Background="Green">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Button x:Name="PlayAgain" Click="PlayAgain_Click" Content="Play Again" FontFamily="Trebuchet MS" FontSize="24" Grid.Column="0" Margin="5" />
            <Button x:Name="ExitGame" Click="ExitGame_Click" Content="Exit Game" FontFamily="Trebuchet MS" FontSize="24" Grid.Column="1" Margin="5" />
        </Grid>
    </Border>
</UserControl>
